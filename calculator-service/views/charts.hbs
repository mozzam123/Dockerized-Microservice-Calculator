<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Charts</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.css" />
  <script src="js/charts.js"></script>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 10px;
      box-sizing: border-box;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    h1 {
      text-align: center;
      color: #343a40;
    }

    .chart-container {
      flex: 1;
      max-width: 45%; /* Adjusted width for side-by-side layout */
      margin: 10px; /* Reduced margin */
    }

    canvas {
      width: 100% !important;
      height: auto;
    }

    .button-container {
      width: 100%;
      text-align: center;
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <div class="chart-container">
    <!-- Display Pie Chart -->
    <div style="width: 100%; margin: auto;">
      <canvas id="pieChart"></canvas>
    </div>
  </div>

  <div class="chart-container">
    <!-- Display Line Chart -->
    <div style="width: 100%; margin: auto;">
      <canvas id="lineChart"></canvas>
    </div>
  </div>

  <div class="button-container">
    <button type="button" onclick="calculatorPage()" class="btn btn-primary">Calculator</button>
  </div>
  <div class="button-container">
    <button type="button" onclick="loginPage()" class="btn btn-danger">Log Out</button>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
  <script>
    var calculationData = {
      pieChartLabels: ['Principal Amount', 'Interest', 'Total Amount'],
      pieChartData: [{{calculationData.principalAmt}}, {{calculationData.interest}}, {{calculationData.totalAmt}}],
      lineChartLabels: ['Principal Amount', 'Interest', 'Total Amount'],
      lineChartData: [{{calculationData.principalAmt}}, {{calculationData.interest}}, {{calculationData.totalAmt}}],
    };

    // Pie Chart
    var ctxPie = document.getElementById('pieChart').getContext('2d');
    var pieChart = new Chart(ctxPie, {
      type: 'pie',
      data: {
        labels: calculationData.pieChartLabels,
        datasets: [{
          data: calculationData.pieChartData,
          backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56'],
        }],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
      }
    });

    // Line Chart
    var ctxLine = document.getElementById('lineChart').getContext('2d');
    var lineChart = new Chart(ctxLine, {
      type: 'line',
      data: {
        labels: calculationData.lineChartLabels,
        datasets: [{
          label: 'Line Chart',
          data: calculationData.lineChartData,
          borderColor: 'rgba(75, 192, 192, 1)',
          borderWidth: 1,
          fill: false,
        }],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
      }
    });
  </script>
</body>

</html>
